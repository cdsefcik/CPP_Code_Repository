#include<iostream>
using namespace std;

/*

Code Examples. This is used in github

*/

int main(){

    int z(100);
    cout<<z<<endl;

    int x;
    cout<<x<<endl;
    x = 5;
    cout<<x<<endl;

    int e = {8};
    cout<<e<<endl;

    int c {5};
    cout<<c<<endl;

    int a[10];
    a[0] = 2;
    a[4] = 5;
    cout<<a[0]<<" "<<a[4]<<endl;
    for(int i = 0; i < 10; i++){
    cout << a[i]<<" ";
    }
    cout<<endl;

    int b[4] = {1,2,3,4};
    cout<<b[0]<<b[1]<<b[2]<<b[3]<<endl;
    cout<<endl;
    cout<<sizeof(b[4]);

    //Basic Input and Output
    float m, cm;
    cout<<"Enter the value in meters: ";
    cin>>m;
    cout<<"The vale in centimeters is: "<<m*100;


    return 0;
}

